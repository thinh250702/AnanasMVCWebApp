@using AnanasMVCWebApp.Controllers
@model CustomerViewModel
@{
    ViewData["Title"] = "Profile";
}

<div class="user-nav wide">
    <ul>
        <li class="active"><a href="#">My Account (&#8594; <i class="fa-solid fa-address-card"></i>)</a></li>
        <li><a asp-action="Index" asp-controller="Order">My Orders (&#8594; <i class="fa-solid fa-box-open"></i>)</a></li>
        <li><a href="#">My Wish List (&#8594; <i class="fa-solid fa-heart"></i>)</a></li>
    </ul>
</div>
<div class="user-container wide">
    <form asp-controller="Account" asp-action="Index" method="POST" autocomplete="off">
        <div class="user-profile-container">
            <div class="user-profile__column basic">
                <div class="form-panel">
                    <h4>Account Information</h4>
                    <hr class="divider top">
                    <div>
                        <div class="form-row">
                            <div class="input-group">
                                @Html.LabelFor(i => i.FullName)
                                @Html.TextBoxFor(i => i.FullName, new { placeholder = "Họ tên" })
                                @Html.ValidationMessageFor(i => i.FullName, "", new { @class = "input-error" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="input-group">
                                @Html.LabelFor(i => i.Phone)
                                <input asp-for="Phone" placeholder="Số điện thoại" readonly>
                                @Html.ValidationMessageFor(i => i.Phone, "", new { @class = "input-error" })
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="input-group">
                                @Html.LabelFor(i => i.Email)
                                <input asp-for="Email" placeholder="Số điện thoại" readonly>
                                @Html.ValidationMessageFor(i => i.Email, "", new { @class = "input-error" })
                            </div>
                        </div>
                        
                        <div class="form-row multiple">
                            <div class="input-group">
                                @Html.LabelFor(i => i.Dob)
                                <input asp-for="Dob" placeholder="Ngày sinh">
                                @Html.ValidationMessageFor(i => i.Dob, "", new { @class = "input-error" })
                            </div>
                            <div class="input-group">
                                @Html.LabelFor(i => i.Gender)
                                <select asp-for="Gender">
                                    <option selected disabled>Giới tính</option>
                                    <option value="true">Nam</option>
                                    <option value="false">Nữ</option>
                                </select>
                                @Html.ValidationMessageFor(i => i.Gender, "", new { @class = "input-error" })
                            </div>
                        </div>
                    </div>
