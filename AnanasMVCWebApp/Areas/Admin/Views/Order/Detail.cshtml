        <form>
            @Html.HiddenFor(i => i.OrderCode)
            <select asp-for="@Model.Status">
                @foreach (var option in Model.StatusList) {
                    if (option.Id == Model.Status.Id) {
                        <option selected value="@option.Id">@option.Name</option>
                    } else {
