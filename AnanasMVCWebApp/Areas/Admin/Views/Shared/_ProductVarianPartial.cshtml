@using AnanasMVCWebApp.Areas.Admin.Models
@model ProductVariantEM
@{
    int index = @ViewBag.Index;
}
<div class="variant-item">
    <h5>Index: @index</h5>
    <button class="delete-variant-btn" type="button"><i class="fa-solid fa-xmark"></i></button>
    <div class="form-row">
        <div class="input-group">
            <label>Mã sản phẩm</label>
            <input readonly type="text" id="Variants_@(index)__ProductCode" name="Variants[@(index)].ProductCode" value="@Model.ProductCode">
            <span asp-validation-for="@Model.ProductCode" class="input-error"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="input-group--color">
            <label>Màu sắc</label>
            <div>
                <div class="color-picker-wrapper"><input class="color-picker" id="Variants_@(index)__HexCode" name="Variants[@(index)].HexCode" type="color" value="@Model.HexCode"></div>
                <input type="text" id="Variants_@(index)__ColorName" name="Variants[@(index)].ColorName" placeholder="Name this color">
            </div>
            <span asp-validation-for="@Model.ColorName" class="input-error"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="input-group">
            <label>Hình ảnh</label>
            <div class="image-grid">
                <div class="upload-image-wrapper">
                    <input type="file" id="Variants_@(index)__FilesUpload" name="Variants[@(index)].FilesUpload" multiple accept="image/*">
                    <label for="Variants_@(index)__FilesUpload">
                        <i class="fa-regular fa-image"></i>
                        <span>Thêm hình ảnh (tối đa 8 ảnh)</span>
                    </label>
                </div>
            </div>
            <span asp-validation-for="@Model.FilesUpload" class="input-error"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="input-group--stock">
            <label>Kho hàng</label>
            <table class="stock-table">
                <thead>
                    <tr>
                        <th>Kích cỡ</th>
                        <th>Số lượng</th>
                        <th>Mã SKU</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int j = 0; j < Model.SKUs.Count; j++) {
                        <tr>
                            <td>@Model.SKUs[j].SizeName</td>
                            <td><input type="text" id="Variants_@(index)__SKUs_@(j)__InStock" name="Variants[@(index)].SKUs[@(j)].InStock" value="@Model.SKUs[j].InStock" placeholder="Số lượng"></td>
                            <td><input type="text" id="Variants_@(index)__SKUs_@(j)__Code" name="Variants[@(index)].SKUs[@(j)].Code" value="@Model.SKUs[j].Code" readonly></td>
                        </tr>
                    }
                </tbody>
            </table>
            <span class="input-error"></span>
        </div>
    </div>
</div>